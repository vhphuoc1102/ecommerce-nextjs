model CmsHomeSubject {
  homeSubjectId Int         @id @default(autoincrement()) @map("home_subject_id")
  subjectType   SubjectType @map("subject_type")
  title         String      @map("title")
  status        Status      @default(ACTIVE) @map("status")
  sortOrder     Int         @default(-1) @map("sort_order")
  createTs      DateTime    @default(now()) @map("create_ts")
  updateTs      DateTime    @updatedAt @map("update_ts")

  CmsHomeItem CmsHomeItem[]

  @@map("cms_home_subject")
}

model CmsHomeItem {
  homeItemId     Int            @id @default(autoincrement()) @map("home_item_id")
  homeSubjectId  Int            @map("home_subject_id")
  productId      Int            @map("product_id")
  sortOrder      Int            @default(-1) @map("sort_order")
  createTs       DateTime       @default(now()) @map("create_ts")
  updateTs       DateTime       @updatedAt @map("update_ts")
  CmsHomeSubject CmsHomeSubject @relation(fields: [homeSubjectId], references: [homeSubjectId], onDelete: Cascade)

  @@map("cms_home_item")
}
